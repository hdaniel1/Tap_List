<h1>Login</h1>

<% if flash["notice"] %>
    <div class="error"><%= flash["notice"] %></div>

<% end %>

<%= form_for "/login" do %>
    <%= label :username, "Username" %>
    <%= text_field_tag :username %>
    <%= label :password, "Password" %>
    <%= password_field_tag :password %>
    <%= submit_tag "Login" %>
<% end %>
<br>
<div>
<%= link_to "Don't have an account? Click here to create one", new_user_path %>
</div>
