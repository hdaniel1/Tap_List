<h1>Your Profile</h1>

<ul>
	<li>Name: <%= @user.name %></li>
	<li>Username: <%= @user.username %></li>
</ul>


<%= link_to "Edit Profile", edit_user_path(@user) %>

<% if @user.brewery %>
	<div>
		<%= link_to "Manage #{@user.brewery.name}", brewery_path(@user.brewery) %>
	</div>
<% end %>

<% if @user.retailer %>
	<div>
		<%= link_to "Manage #{@user.retailer.name}", retailer_path(@user.retailer) %>
	</div>
<% end %>

<h2>My Favorite Beers</h2>
<ul>
	<% @user.beers.each do |beer| %>
		<li><%= link_to beer.name, beer_path(beer) %></li>
	<% end %>
</ul>
<div>
<%= link_to "Browse Beer Selection", beers_path %>
</div>

<% if get_current_user.is_retailer && !Retailer.where(user_id: get_current_user.id) %>
<h2> Create Retailer Listing </h2>
<%= render "retailers/retailer" %>

<% end %>
